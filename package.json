    "busboy": "^0.3.1",
    "config": "^3.3.3",
    "express": "^4.17.1",
    "mongoose": "^5.9.10",
    "nodemon": "^2.0.4",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "sweetalert2": "^10.8.1",
    "sweetalert2-react-content": "^3.2.1",
    "validator": "^13.1.1"
  },
  "devDependencies": {
    "concurrently": "^5.3.0"
  }
}
